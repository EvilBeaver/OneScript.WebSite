@{
        var section = this.ViewContext.RouteData.Values["controller"];
        var sectionDefs = new[]
            {
                new{Text = "Скачать", Controller = "downloads", Action = "index"},
                new{Text = "Документация", Controller = "docs", Action = "index"},
                new{Text = "Библиотеки", Controller = "library", Action = "index"},
                new{Text = "Синтакс-помощник", Controller = "syntax", Action = "index"}
            };
}

<!-- Static navbar -->
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">OneScript</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        @foreach (var item in sectionDefs)
                        {
                            if (String.Compare(item.Controller, (string) section, true) == 0)
                            {
                                <li class="active">@Html.ActionLink(item.Text, item.Action, item.Controller)</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink(item.Text, item.Action, item.Controller)</li>
                            }
                        }

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Разработчикам<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Как принять участие в проекте", "contribute", "dev")</li>
                                <li>@Html.ActionLink("Исходный код", "sources", "dev")</li>
                                <li>@Html.ActionLink("Руководство разработчика", "index", "dev")</li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>